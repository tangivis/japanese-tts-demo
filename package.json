{
  "name": "japanese-tts-vue",
  "version": "2.0.0",
  "type": "module",
  "description": "Modern Japanese TTS Demo with Vue 3",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "test": "vitest",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.0",
    "edge-tts-client": "^1.0.0",
    "element-plus": "^2.8.0",
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@testing-library/vue": "^8.1.0",
    "@tsconfig/node20": "^20.1.6",
    "@types/node": "^24.0.13",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.31.0",
    "eslint-plugin-vue": "^10.3.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "vite": "^5.0.0",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.1"
  },
  "keywords": [
    "japanese",
    "tts",
    "vue3",
    "modern-ui"
